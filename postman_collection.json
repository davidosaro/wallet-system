{
  "info": {
    "name": "Wallet System API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    }
  ],
  "item": [
    {
      "name": "Users",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/users"
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/users/1"
          }
        },
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/users",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\"\n}"
            }
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/api/users/1",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Updated\",\n  \"email\": \"john.updated@example.com\"\n}"
            }
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/api/users/1"
          }
        }
      ]
    },
    {
      "name": "Wallets",
      "item": [
        {
          "name": "Get All Wallets",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/wallets"
          }
        },
        {
          "name": "Get Wallet by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/wallets/1"
          }
        },
        {
          "name": "Create Wallet",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/wallets",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": 1,\n  \"currency\": \"USD\"\n}"
            }
          }
        },
        {
          "name": "Deposit",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/wallets/1/deposit",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 100.00\n}"
            }
          }
        },
        {
          "name": "Withdraw",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/wallets/1/withdraw",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 50.00\n}"
            }
          }
        },
        {
          "name": "Transfer",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/wallets/1/transfer",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"toWalletId\": 2,\n  \"amount\": 25.00\n}"
            }
          }
        },
        {
          "name": "Delete Wallet",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/api/wallets/1"
          }
        }
      ]
    }
  ]
}
